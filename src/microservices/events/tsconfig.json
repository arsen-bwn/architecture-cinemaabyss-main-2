{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "rootDir": "src",
      "outDir": "dist",
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "sourceMap": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["dist", "node_modules"]
  }